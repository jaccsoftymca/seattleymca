{#

/**
 * @file
 *
 * Template file for generating the CSS file used for the menu item icons.
 */

#}

{% for icon in icons %}
  .menu-icon-{{ icon.mlid }} .section-icon {
    background-image: url({{ icon.path }});

    {% if icon.path ends with '.svg' %}
      -webkit-filter: invert(50%) brightness(5);
      filter: invert(50%) brightness(5);
    {% endif %}
  }
{% endfor %}
