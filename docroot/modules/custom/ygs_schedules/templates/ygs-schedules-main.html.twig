{#
/**
 * @file
 * YGS Schedules.
 *
 * Available variables:
 * - content: contains all data.
 *
 * @ingroup themeable
 */
#}
<div class="container">
  <div class="row">
    <div class="col-xs-12 schedule-sessions-group">
    <h3 class="schedule-title">{{ 'Daily View'|t }}</h3>
    <h2>{{ title }}</h2>
    {% if content is empty %}
      {{ 'It looks like there are no classes / sessions matching your search criteria.'|t }}
    {% endif %}
    {% for time, group in content %}
      <div class="group_time">
        {{ time }}
      </div>
      <div class="schedule-sessions-group-slider">
        {% for teaser in group %}
          <a class="views-row row-eq-height" href="{{ teaser.url }}" target="_blank">
            {% if teaser.included_in_membership %}
            <div class="included-in-membership"></div>
            {% endif %}
            <h3>{{ teaser.label }}</h3>
            {% if teaser.room %}
              <div class="facility-text">
                {{ teaser.room }}
              </div>
            {% endif %}
            <p>{{ teaser.description }}</p>
            {% if teaser.ticket_required %}
              <i class="ticket">{{ 'Ticket Required'|t }}</i>
            {% endif %}
          </a>
      {% endfor %}
    </div>
    {% endfor %}
    </div>
  </div>
</div>
