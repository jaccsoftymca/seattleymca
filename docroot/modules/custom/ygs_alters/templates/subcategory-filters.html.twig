{#
/**
 * @file
 * Custom theme implementation for subcategory filters.
 *
 * Available variables:
 * - filters: An array of data.
 *
 * @ingroup themeable
 */
#}
<div class="filters-wrapper">
  <div class="filters">
    <div class="label">{{ 'Filtered by:'|t }}</div>
    {% for key, value in filters %}
      {% set class = key in required_filters ? 'required-filter' : '' %}
      <div class="filter {{ class }}">{{ value }}<a href="#" data-id="{{ key }}" class="remove"><i class="fa fa-close"></i></a></div>
    {% endfor %}
  </div>
</div>
<div class="reset-wrapper">
  <a href="#" class="clear">{{ 'Clear All'|t }}</a>
</div>
