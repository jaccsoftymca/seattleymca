<div class="class-page-schedule row">
  <!-- Schedule -->
  <div class="col-xs-12">
    <div class="data-wrapper ng-hide sidebar-card" data-ng-show="current_session.nid">
      <div>
        <h3>{{ 'Schedule'|t }}</h3>
        <div><h2>{{ '{{current_session.location.name}}' }} <a href="#" class="edit-class-sch ng-hide" data-ng-show="available_locations_count > 1">{{ 'Change Location'|t }}</a></h2> </div>
        <div class="phone" data-ng-show="current_session.location.phone">{{ 'Phone:'|t }} {{ '{{current_session.location.phone}}' }}</div>
        <div class="facility-name" data-ng-show="current_session.facility.name">{{ '{{current_session.facility.name}}' }}</div>
        <div class="phone" data-ng-show="current_session.facility.phone">{{ 'Phone:'|t }} {{ '{{current_session.facility.phone}}' }}</div>
        <div class="facility-text" data-ng-show="current_session.facility.text">{{ '{{current_session.facility.text}}' }}</div>
        <div class="ng-hide" data-ng-show="class.type == 'activity' && !current_session.single_day" >{{ 'Every'|t }}</div>
        <div>
          <ul>
            <li data-ng-repeat="schedule_item in (current_session.schedule.dates)">
              <div class="class_days">{{ '{{ schedule_item.days_formatted }}' }}</div>
              <div class="class_time">{{ '{{ schedule_item.time_formatted }}' }}</div>
              <div class="class_end">{{ '{{ schedule_item.deadline }}' }}</div>
            </li>
          </ul>
        </div>
        <div>
          <a href="{{ '{{ current_session.all_schedules_url }}' }}" data-ng-show="class.type == 'activity'" class="btn btn-default blue">{{ 'See all schedules'|t }}</a>
          <a href="{{ '{{ current_session.all_schedules_url }}' }}" data-ng-show="class.type == 'flexreg'" class="btn btn-default blue">{{ 'See similar offerings'|t }}</a>
        </div>
      </div>
    </div>
  </div>
  <!-- /Schedule -->

  <!-- Register today-->
  <div class="col-xs-12">
    <div class="data-wrapper ng-hide sidebar-card" data-ng-show="current_session.online_registration">
      <h3 data-ng-show="current_session.online_registration && class.type == 'activity'">{{ 'Register today'|t }}</h3>
      <h3 data-ng-show="current_session.online_registration && class.type == 'flexreg'">{{ 'Register information'|t }}</h3>
      <div data-ng-show="current_session.online_registration"><h2>{{ '{{current_session.spots_available}}' }}</h2> </div>
      <div data-ng-show="class.type == 'activity'">
        <div class="class_price" data-ng-show="current_session.member_price">{{ 'Member price:'|t }} {{ '{{ current_session.member_price }}' }}</div>
        <div class="class_price" data-ng-show="current_session.non_member_price">{{ 'Drop in:'|t }} {{ '{{ current_session.non_member_price }}' }}</div>
      </div>
      <div data-ng-show="class.type == 'flexreg'">
        <div class="starting-from">{{ 'Starting from:'|t }} {{ '{{ current_session.price }}' }}</div>
        <div class="reg-date">{{ 'Standard Registration Begins:'|t }} {{ '{{ current_session.std_reg_begins }}' }}</div>
        <div class="reg-date">{{ 'Standard Registration Ends:'|t }} {{ '{{ current_session.std_reg_ends }}' }}</div>
        <div class="reg-date">{{ 'Online Registration Begins:'|t }} {{ '{{ current_session.online_reg_begins }}' }}</div>
        <div class="reg-date">{{ 'Online Registration Ends:'|t }} {{ '{{ current_session.online_reg_ends }}' }}</div>
      </div>
      <div data-ng-show="current_session.ticket_required">{{ 'Ticket required'|t }}</div>
      <div data-ng-show="current_session.online_registration">
        <a href="{{ '{{ current_session.register_url.url }}' }}" data-ng-show="class.type == 'activity'" target="_blank" class="btn btn-default blue">{{ '{{ current_session.register_url.title }}' }}</a>
        <a href="{{ '{{ current_session.register_url }}' }}" data-ng-show="class.type == 'flexreg'" target="_blank" class="btn btn-default blue">{{ 'Register Now'|t }}</a>
      </div>
    </div>
    <div class="data-wrapper ng-hide sidebar-card" data-ng-show="current_session.show_message">
      <h3>{{ 'No spots currently available'|t }}</h3>
    </div>
  </div>
  <!-- /Register today-->
</div>
